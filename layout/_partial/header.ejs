<header id="header">
  <div id="banner"></div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
        <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
      </h1>
      <% if (theme.subtitle){ %>
        <h2 id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
        </h2>
      <% } %>
    </div>
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
      </nav>
      <nav id="sub-nav">
        <% if (config.social.github){ %>
          <a id="nav-github-link" class="nav-icon" href="https://github.com/<%= config.social.github %>"></a>
        <% } %>
        <% if (config.social.twitter){ %>
          <a id="nav-twitter-link" class="nav-icon" href="https://twitter.com/<%= config.social.twitter %>"></a>
        <% } %>
        <% if (config.social.medium){ %>
          <a id="nav-medium-link" class="nav-icon" href="https://medium.com/@<%= config.social.medium %>"></a>
        <% } %>
        <% if (config.social.linkedin){ %>
          <a id="nav-linkedin-link" class="nav-icon" href="https://linkedin.com/in/<%= config.social.linkedin %>"></a>
        <% } %>
        <% if (config.social.instagram){ %>
          <a id="nav-instagram-link" class="nav-icon" href="https://instagram.com/<%= config.social.instagram %>"></a>
        <% } %>
        <% if (config.social.facebook){ %>
          <a id="nav-facebook-link" class="nav-icon" href="https://facebook.com/<%= config.social.facebook %>"></a>
        <% } %>
        <% if (theme.rss){ %>
          <a id="nav-rss-link" class="nav-icon" href="<%- url_for(theme.rss) %>" title="<%= __('rss_feed') %>"></a>
        <% } %>
        <a id="nav-search-btn" class="nav-icon" title="<%= __('search') %>"></a>
      </nav>
      <div id="search-form-wrap">
        <%- search_form({button: '&#xF002;'}) %>
      </div>
    </div>
  </div>
</header>